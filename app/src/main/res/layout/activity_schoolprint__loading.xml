<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schoolprint_Loading">
    <TextView
        android:id="@+id/schoolprint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 운세"
        android:textColor="#000000"
        android:textSize="50dp"
        android:gravity="center"
        android:fontFamily="@font/songmyungregular"
        app:layout_constraintBottom_toTopOf="@id/schoolprint_name"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:id="@+id/schoolprint_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OOO님"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/schoolprint_tv1"
        android:layout_marginBottom="40dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/schoolprint_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잠시만 기다려주세요!"
        android:textColor="#0da6fe"
        android:textSize="35dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/schoolprint_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과 분석중 ..."
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/schoolprint_tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>