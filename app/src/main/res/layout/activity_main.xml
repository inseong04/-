<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff"
    >
    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/clover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_title"
        />
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 운세"
        android:textColor="#0da6fe"
        android:textSize="50dp"
        android:fontFamily="@font/songmyungregular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/background_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#daedff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"
        />
    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내정보"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@+id/information"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/main_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020."
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/information"
        app:layout_constraintLeft_toRightOf="@id/username"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        />
    <TextView
        android:id="@+id/main_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08."
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/information"
        app:layout_constraintLeft_toRightOf="@id/main_year"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/main_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16"
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/information"
        app:layout_constraintLeft_toRightOf="@id/main_month"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/background_2"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#daedff"
        app:layout_constraintTop_toBottomOf="@id/background_1"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/background2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 오늘하루는 어떨까요?"
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/background2_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#오늘의 #운세 #확인하기"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/background2_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:src="@drawable/fortune1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="61dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/background_3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#daedff"
        app:layout_constraintTop_toBottomOf="@id/background_2"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/background3_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 학업운을 확인해볼까요?"
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/background2_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:id="@+id/background3_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#모의고사 #수능 #성적"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/background3_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:src="@drawable/study"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background2_text1"
        android:layout_marginTop="67dp"
        android:layout_marginRight="13dp"
        />
    <TextView
        android:id="@+id/background_4"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#daedff"
        app:layout_constraintTop_toBottomOf="@id/background_3"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/background4_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 직업운을 확인해볼까요?"
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/background3_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:id="@+id/background4_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#회사생활 #상사 #승진"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/background4_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:src="@drawable/work"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background3_text1"
        android:layout_marginTop="67dp"
        android:layout_marginRight="13dp"
        />
    <TextView
        android:id="@+id/background_5"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#daedff"
        app:layout_constraintTop_toBottomOf="@id/background_4"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/background5_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한번 포츈쿠키를 열어보세요!"
        android:textSize="20dp"
        android:textColor="#0da6fe"
        app:layout_constraintTop_toBottomOf="@id/background4_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:id="@+id/background5_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#오늘하루도 #행운을 #빌어요"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/background5_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:src="@drawable/fortunecookie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background4_text1"
        android:layout_marginTop="67dp"
        android:layout_marginRight="13dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>