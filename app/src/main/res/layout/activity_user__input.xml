<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/main_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/songmyungregular"
        android:textSize="35dp"
        android:textColor="#000000"
        android:text="오늘의 운세"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:fontFamily="@font/notoserifkrmedium"
        android:textSize="25dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/main_text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/main_edit_name"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/main_name"
        app:layout_constraintTop_toTopOf="@id/main_name"
        app:layout_constraintBottom_toBottomOf="@id/main_name"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/main_text_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:fontFamily="@font/notoserifkrmedium"
        android:textSize="25dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_edit_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/datepicker_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일을 입력해주세요!"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/notoserifkrmedium"
        android:textColor="#7ab5e1"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_edit_name"
        app:layout_constraintLeft_toRightOf="@id/main_text_birthday"
        android:layout_marginRight="60dp"
        android:layout_marginTop="55dp"
        />
    <TextView
        android:id="@+id/main_text_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="년"
        android:textSize="20dp"
        android:fontFamily="@font/notoserifkrmedium"
        app:layout_constraintTop_toBottomOf="@id/main_edit_name"
        app:layout_constraintRight_toRightOf="@id/main_text_month"
        app:layout_constraintLeft_toLeftOf="@id/main_text_birthday"
        android:layout_marginRight="60dp"

        android:layout_marginTop="55dp"
        android:visibility="invisible"
        android:layout_marginLeft="140dp"
        />
    <TextView
        android:id="@+id/main_text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_edit_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#000000"
        android:text="월"
        android:textSize="20dp"
        android:fontFamily="@font/notoserifkrmedium"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/main_text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/main_edit_name"
        app:layout_constraintLeft_toLeftOf="@id/main_text_month"
        android:layout_marginLeft="45dp"
        android:text="일"
        android:textSize="20dp"
        android:fontFamily="@font/notoserifkrmedium"
        android:layout_marginTop="55dp"

        android:visibility="invisible"
        />
    <Button
        android:id="@+id/main_nextscreen_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음으로"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_design"
        android:layout_marginBottom="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>